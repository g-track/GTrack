<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Fragments.parentProfileFragment">




    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/parent_profile_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/colorWhite"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/parent_profile_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/profileimage"
                    android:layout_centerHorizontal="true"
                    android:elevation="2dp" />

                <LinearLayout
                    android:id="@+id/parent_profile_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70dp"
                        android:padding="15dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:id="@+id/parent_cardView_LinearLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/parent_login_LineraLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/gradient"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/parent_login_Text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="70dp"
                                    android:layout_marginBottom="20dp"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="Muhammad Ali"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="20sp"
                                    android:textStyle="bold"/>

                            </LinearLayout>

                           <!-- <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Muhammad Ali"
                                android:textSize="25sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="90dp"

                                />-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/parent_cnic_textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="CNIC: "
                                    android:textSize="14dp"
                                    android:layout_marginTop="10dp"
                                    android:paddingLeft="20dp"/>
                                <TextView
                                    android:id="@+id/parent_cnicNo_textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="  35301-1234567-3"
                                    android:textSize="14dp"
                                    android:layout_marginTop="10dp"
                                    android:paddingLeft="20dp"
                                    android:layout_alignBaseline="@id/parent_cnic_textView"
                                    android:layout_toRightOf="@id/parent_cnic_textView"/>


                            </RelativeLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/editTextBG"
                                android:layout_marginTop="8dp"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/parent_phone_textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Phone: "
                                    android:textSize="14dp"
                                    android:layout_marginTop="10dp"
                                    android:paddingLeft="20dp"/>
                                <TextView
                                    android:id="@+id/parent_phoneNo_textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="03001234567"
                                    android:textSize="14dp"
                                    android:layout_marginTop="10dp"
                                    android:paddingLeft="20dp"
                                    android:layout_alignBaseline="@id/parent_phone_textView"
                                    android:layout_toRightOf="@id/parent_phone_textView"/>

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/editTextBG"
                                android:layout_marginTop="8dp"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/childid_parent_textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Child ID:"
                                    android:textSize="14dp"
                                    android:layout_marginTop="10dp"
                                    android:paddingLeft="20dp" />
                                <TextView
                                    android:id="@+id/parent_childid_textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="15137070"
                                    android:textSize="14dp"
                                    android:layout_marginTop="10dp"
                                    android:paddingLeft="20dp"
                                    android:layout_alignBaseline="@id/childid_parent_textView"
                                    android:layout_toRightOf="@id/childid_parent_textView"/>


                            </RelativeLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/editTextBG"
                                android:layout_marginTop="8dp"/>
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/gradient">

                                <TextView
                                    android:id="@+id/parent_updatePassword_textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:paddingLeft="20dp"
                                    android:textColor="@color/colorWhite"
                                    android:text="Update Password"
                                    android:textSize="14dp"
                                    android:layout_marginBottom="10dp"/>


                            </RelativeLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                
            </RelativeLayout>



        </LinearLayout>

    </RelativeLayout>
