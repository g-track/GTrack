<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.changePassword">

    <EditText
        android:id="@+id/oldpass_id"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="50dp"
        android:background="@color/editTextBG"
        android:hint="Enter old Password..."
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/newpass_id"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@color/editTextBG"
        android:hint="Enter New Password...."
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="@+id/oldpass_id"
        app:layout_constraintStart_toStartOf="@+id/oldpass_id"
        app:layout_constraintTop_toBottomOf="@+id/oldpass_id" />

    <EditText
        android:id="@+id/confirmpass_id"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@color/editTextBG"
        android:hint="Confirmed Password...."
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="@+id/newpass_id"
        app:layout_constraintStart_toStartOf="@+id/newpass_id"
        app:layout_constraintTop_toBottomOf="@+id/newpass_id" />

    <Button
        android:id="@+id/resetpass_id"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/buttondraw"
        android:text="Reset Password"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/confirmpass_id"
        app:layout_constraintStart_toStartOf="@+id/confirmpass_id"
        app:layout_constraintTop_toBottomOf="@+id/confirmpass_id" />

</androidx.constraintlayout.widget.ConstraintLayout>